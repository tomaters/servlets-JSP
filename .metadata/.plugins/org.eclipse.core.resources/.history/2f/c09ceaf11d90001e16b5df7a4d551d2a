		<%
		Vector<TempMemberVO> vlist = dao.getMemberList();
		int counter = vlist.size();
		for (int i = 0; i < vlist.size(); i++) {
			TempMemberVO tempMemberVO = vlist.elementAt(i);
		%>
		<tr>
			<td><%=tempMemberVO.getId()%></td>
